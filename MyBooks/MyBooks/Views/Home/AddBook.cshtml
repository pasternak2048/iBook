<h2>Add Book</h2>
@using MyBooks.Storage;
@using MyBooks.Models;
@model Book
<form method="post" action="/Home/AddBook">
    <table>
        
        <tr>
            <td><p>Name: </p></td>
            <td><input type="text" name="Name" /> </td>
        </tr>
        <tr>
            <td><p>Author Name: </p></td>
            <td><input type="text" name="AuthorName" /> </td>
        </tr>
        <tr>
            <td><p>Author Surname: </p></td>
            <td><input type="text" name="AuthorSurname" /> </td>
        </tr>
        <tr>
            <td><p>Year Of Publish: </p></td>
            <td><input type="text" name="YearOfPublish" /> </td>
        </tr>

        <tr>
            <td><p>Genre: </p></td>
            <td>
                @Html.DropDownListFor(m => m.GenreId,
                     new SelectList(Storages.Genres, "Id", "Name"))
                    </td>
        </tr>
    </table>
    <input type="submit" value="Save" />
</form>
